<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Use this in conjunction with app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
         for the Toolbar to make the text in the Toolbar white -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- To make the contextual action bar overlay the Toolbar instead of pushing it down -->
        <item name="windowActionModeOverlay">true</item>
        <!-- Make the contextual action bar look the same as the Toolbar -->
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>

    <!-- Theme for a dark Toolbar (white on black) but with light popup menus (black on white) -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- TextView style for secondary text (additional information other than main content) -->
    <style name="SecondaryText" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
